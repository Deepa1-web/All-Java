package database;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;

public class Update {
    public static void main(String[] args) {
        try {
           Class.forName("com.mysql.cj.jdbc.Driver");
            Connection conn= DriverManager.getConnection("jdbc:mysql://localhost:3306/db_registration");
            String sql="UPDATE tbl_user SET FirstName=?,LastName=?,Mobile=?,Password=?,ConfirmPassword=? WHERE email=?";
            PreparedStatement stmt=conn.prepareStatement(sql);
            stmt.setString(1,"paban");
            stmt.setString(2,"joshi");
            stmt.setString(3,"0944793");
            stmt.setString(4,"we");
            stmt.setString(5,"we");
            stmt.setString(6,"deepapaneru220@gmail.com");
            int res=stmt.executeUpdate();
            if(res>0){
                System.out.println("data updated");
            }
            else {
                System.out.println("not updated");
            }
        } catch (Exception e) {
            {
                System.out.println(e.getMessage());
            }
        }
    }
}
