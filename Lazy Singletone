

public class SingletoneLazy {
    public static SingletoneL instance;
    public SingletoneLazy(){

    }
    public static SingletoneLazy getInstance(){
        if(instance==null) {
            instance = new SingletoneL();
        }
            return instance;

    }
    public  void greeting(){
        System.out.println("good afternoon");
    }
}


public class Main2 {
    public static void main(String[] args) {
        SingletoneLazy instance=SingletoneLazy.getInstance();
        instance.greeting();
    }
}
