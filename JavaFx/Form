

import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.control.*;
import javafx.scene.layout.HBox;
import javafx.scene.layout.VBox;
import javafx.stage.Stage;

public class Form extends Application {
    @Override
    public void start(Stage stage) throws Exception {
        Label l1 = new Label("FirstName");
        TextField t1 = new TextField();
        Label l2 = new Label("Lastname");
        TextField t2 = new TextField();
        Label l3 = new Label("Email");
        TextField t3 = new TextField();
        Label l4 = new Label("Gender");

        RadioButton r1 = new RadioButton("male");
        RadioButton r2 = new RadioButton("female");
        RadioButton r3 = new RadioButton("custom");
        ToggleGroup gp = new ToggleGroup(); // For radio button grouping
        r1.setToggleGroup(gp);
        r2.setToggleGroup(gp);
        r3.setToggleGroup(gp);

        ComboBox<String> cb = new ComboBox<>();
        cb.setPromptText("Select program");
        cb.getItems().addAll("BE computer", "BCA", "BE SE");

        Label l5 = new Label("Favourite Programming");
        CheckBox c1 = new CheckBox("Java");  // Note: CheckBox (JavaFX), not Checkbox (AWT)
        CheckBox c2 = new CheckBox("Python");
        CheckBox c3 = new CheckBox("Kotlin");

        Button b1 = new Button("Submit");
        Button b2 = new Button("clear");

        HBox h1 = new HBox(120, l1, l2);
        HBox h2 = new HBox(10, t1, t2);
        HBox h3 = new HBox(10, r1, r2, r3);
        HBox h4 = new HBox(10, c1, c2, c3);
        HBox h5 = new HBox(10, b1, b2);

        VBox v = new VBox(10); // Added spacing between VBox children
        v.getChildren().addAll(h1, h2, l3, t3, l4, h3, l5, cb, h4, h5);
        b1.setOnAction(actionEvent -> {
            System.out.println("form submitted successfully");
        });



// Submit button event handler
            b2.setOnAction(actionEvent -> {
                        // Collect form data

                String firstName = t1.getText();
                String lastName = t2.getText();
                String email = t3.getText();

                String gender = "";
                if (r1.isSelected()) gender = "male";
                else if (r2.isSelected()) gender = "female";
                else if (r3.isSelected()) gender = "custom";

                String course = cb.getValue() != null ? cb.getValue() : "";

                StringBuilder languages = new StringBuilder();
                if (c1.isSelected()) languages.append("Java "); if (c2.isSelected()) languages.append("Python ");
                if (c3.isSelected()) languages.append("Kotlin ");
                System.out.println("form submitted successfullly");
                    });

        b2.setOnAction(actionEvent -> {
            t1.clear();
            t2.clear();
            t3.clear();
            gp.selectToggle(null);
            c1.setSelected(false);
            c2.setSelected(false);
            c3.setSelected(false);
            cb.getSelectionModel().clearSelection();


        });

        stage.setTitle("Form");
        Scene scene = new Scene(v, 600, 500);
        stage.setScene(scene);
        stage.show();
    }

    public static void main(String[] args) {
        launch(args);
    }
}
