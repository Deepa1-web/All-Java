//interface
package rmi;

import java.rmi.Remote;
import java.rmi.RemoteException;

public interface SIInterface extends Remote {
    public double SI(double P,double T,double R)throws RemoteException;

}

//interface implementation
package rmi;

import java.rmi.RemoteException;
import java.rmi.server.UnicastRemoteObject;

public class SIInterfaceImpl extends UnicastRemoteObject implements SIInterface {
    public SIInterfaceImpl()throws RemoteException{
      super(0);
    }
    @Override
    public double SI(double P,double T,double R)throws RemoteException{
        return (P*T*R);
    }
}
//server
package rmi;

import java.rmi.registry.LocateRegistry;
import java.rmi.registry.Registry;

public class Server {
    public static void main(String[] args) {
        try {
            Registry r = LocateRegistry.createRegistry(1099);
            r.rebind("SI", new SIInterfaceImpl());
            System.out.println("server ready");
        } catch (Exception e) {
            System.out.println("server error" + String.valueOf(e));
        }

    }
}
//client

package rmi;

import java.rmi.registry.LocateRegistry;
import java.rmi.registry.Registry;

public class Client {
    public static void main(String[] args) {
        try {
            Registry r = LocateRegistry.getRegistry(1099);
            SIInterface si = (SIInterface)r.lookup("SI");
            System.out.println("simple interest=" + si.SI((double)1000.0F, (double)2.0F, (double)10.0F));
        } catch (Exception e) {
            System.out.println("client error" + String.valueOf(e));
        }

    }
}
