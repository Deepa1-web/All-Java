package database;

import java.sql.Connection;
mport java.sql.DriverManager;
import java.sql.DriverManager;
import java.sql.PreparedStatement;

public class SelectOne {
    public static void main(String[] args) {
     try {
          Class.forName("com.mysql.cj.jdbc.Driver");

import java.sql.PreparedStatement;System.out.println("driver loaded successfully");
          Connection conn= DriverManager.getConnection("jdbc:mysql://localhost:3306/db_registration","root","");
           String sql="SELECT * FROM TBL_USER WHERE Email=?";
           PreparedStatement stmt=conn.prepareStatement(sql);
          stmt.setInt(1,2);
          int res=stmt.executeQuery();
          if(res>0){
              System.out.println("data selected");
            }
          else {
             System.out.println("not selected");

        } catch (Exception e) {
            System.out.println(e.getMessage());
     }
   }
}
